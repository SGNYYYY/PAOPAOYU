<!--components/product-xianzhi/index.wxml-->
<!-- 闲置订单 -->
<view class="product-container" wx:if="{{currentTab==1&&product_xianzhi.status==0}}"  bind:tap='xianzhiDetails'>
  <!-- 商品展示左边 -->
  <view class='product-left'>
    <view class='product-img' >
      <image class='img' src="{{product_xianzhi.imgFileIDs[0]}}"></image>
    </view>
  </view>
  <!-- 商品展示右边 -->
  <view class='product-right'>  
    <!-- 商品基本信息上部分 -->
    <view class='product-name' >{{product_xianzhi.name}}</view>
    <!-- 商品基本信息下部分 -->
  <!-- 价格 -->
  <view class='price-container'>
    <view class='price-left'>
      <text class='price-symbol' >￥</text>
      <text class='price' >{{product_xianzhi.price}}</text>
    </view>
  </view>
  </view>
  <view class='immediately'>
  </view>
</view>
