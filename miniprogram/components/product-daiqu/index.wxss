/* components/product-daiqu-column/index.wxss */
/* 容器盒子 */
.container{
  display: inline-flex;
  width:740rpx;
  margin-left: 5rpx;
  background:#fff;
  border-radius: 25rpx;
  margin-top: 0rpx;
  box-shadow: 0rpx 0rpx 14rpx 0rpx rgb(218, 218, 218);
}
/* 展示商品左边布局 */
.product-left{
  margin: 34rpx 0 30rpx 0;
}
.product-from, .product-name, .product-to{
  margin-left: 20rpx;
  width:180rpx;
  border-radius:10px;
}
/* 商品右边部分显示 */
.product-right{
  width: 100%;
  height:180rpx;
  margin:34rpx 0 0 30rpx;
  display: inline-flex;
  flex-flow: column;
  justify-content: space-between;
}
.date {
  width: 300rpx;
}
.limitted-time {
  width: 300rpx;
}
/* 价格 */
.price-container{
  width: 100%;
  display: inline-flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.price-symbol {
  font-size:40rpx;
  font-weight:400;
  color:#ff6600;
}
.price {
  font-size:40rpx;
  font-weight:600;
  color:#ff6600;
}
.immediately {
  position:relative;
  margin-top: 110rpx;
  right: 60rpx;
  width: 170rpx;
}
.go{
  width:170rpx;
  height:56rpx;
  line-height: 56rpx;
  background:rgba(255,79,80,1);
  border-radius:15rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
